<!DOCTYPE html>
<html>
<head>
    <title>Log Food</title>
</head>
<body>

<h2>Log Food</h2>

<form method="POST" action="/food-log">

    <label>Food:</label>
    <select name="food_id" required>
        <% foods.forEach(food => { %>
            <option value="<%= food.food_id %>">
                <%= food.food_name %> - <%= food.calories %> cal
            </option>
        <% }) %>
    </select>
    <br><br>

    <label>Daily Calorie Goal:</label>
    <input type="number" name="calorie_goal" required><br><br>

    <label>Total Weight Lost (lbs):</label>
    <input type="number" step="0.01" name="total_weight_lost" required><br><br>

    <button type="submit">Save Food Log</button>
</form>

<br>
