<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login / Register</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        :root {
            --bg-gradient-start: #111827;
            --bg-gradient-end: #1f2937;
            --card-bg: #ffffff;
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --border-color: #e5e7eb;
            --text-main: #111827;
            --text-muted: #6b7280;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at top, #1f2937, #020617);
        }

        .auth-wrapper {
            width: 100%;
            max-width: 420px;
            padding: 16px;
        }

        .card {
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 18px 45px rgba(0, 0, 0, 0.35);
            padding: 24px 22px 26px;
        }

        .card-header {
            text-align: center;
            margin-bottom: 14px;
        }

        .card-header h1 {
            margin: 0;
            font-size: 26px;
            color: var(--text-main);
        }

        .card-header p {
            margin: 6px 0 0;
            font-size: 14px;
            color: var(--text-muted);
        }

        .error {
            color: #b91c1c;
            background-color: #fee2e2;
            border: 1px solid #fecaca;
            border-radius: 10px;
            padding: 8px 10px;
            font-size: 14px;
            text-align: center;
            margin-bottom: 10px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-top: 10px;
        }

        .field-group {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        label {
            font-weight: 600;
            font-size: 13px;
            color: #374151;
        }

        input, select {
            width: 100%;
            padding: 9px 10px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            font-size: 14px;
            outline: none;
            transition: border-color 0.15s, box-shadow 0.15s, background-color 0.15s;
            background-color: #f9fafb;
        }

        input:focus, select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
            background-color: #ffffff;
        }

        .btn {
            margin-top: 6px;
            padding: 10px;
            border: none;
            border-radius: 999px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.15s, transform 0.08s, box-shadow 0.15s;
        }

        .btn-primary {
            background-color: var(--primary);
            color: #ffffff;
            box-shadow: 0 5px 14px rgba(37, 99, 235, 0.45);
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
        }

        .btn-primary:active {
            transform: translateY(1px);
            box-shadow: 0 3px 8px rgba(37, 99, 235, 0.5);
        }

        .btn-outline {
            background-color: transparent;
            color: var(--primary);
            border: 1px solid var(--primary);
            width: 100%;
            margin-top: 14px;
        }

        .btn-outline:hover {
            background-color: #eff6ff;
        }

        .divider {
            margin: 18px 0 8px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #9ca3af;
            font-size: 12px;
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background-color: #e5e7eb;
        }

        #register-form {
            display: none;
            margin-top: 12px;
            padding-top: 10px;
            border-top: 1px solid var(--border-color);
        }

        #register-form h2 {
            margin: 0 0 6px;
            font-size: 18px;
            color: var(--text-main);
        }

        .name-row {
            display: flex;
            gap: 10px;
        }

        .name-row .field-group {
            flex: 1;
        }

        @media (max-width: 480px) {
            .card {
                padding: 20px 16px 22px;
            }
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="card">
            <div class="card-header">
                <h1>FitTracker</h1>
                <p>Log in or create an account to track your workouts & meals.</p>
            </div>

            <% if (error) { %>
                <div class="error"><%= error %></div>
            <% } %>

            <!-- Login Form -->
            <form action="/login" method="POST">
                <div class="field-group">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" required>
                </div>

                <div class="field-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" required>
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            </form>

            <div class="divider">
                <div class="divider-line"></div>
                <span>New here?</span>
                <div class="divider-line"></div>
            </div>

            <button type="button" id="show-register" class="btn btn-outline">
                Create a new account
            </button>

            <!-- Registration Form -->
            <form id="register-form" action="/register" method="POST">
                <h2>Register</h2>

                <!-- SECURITY FIELDS -->
                <div class="field-group">
                    <label for="usernameReg">Username</label>
                    <input type="text" name="username" id="usernameReg" required>
                </div>

                <div class="field-group">
                    <label for="passwordReg">Password</label>
                    <input type="password" name="password" id="passwordReg" required>
                </div>

                <div class="field-group">
                    <label for="email">Email (optional)</label>
                    <input type="email" name="email" id="email">
                </div>

                <div class="field-group">
                    <label for="phone_number">Phone Number (optional)</label>
                    <input type="text" name="phone_number" id="phone_number">
                </div>

                <!-- CUSTOMER FIELDS (Basic) -->
                <div class="name-row">
                    <div class="field-group">
                        <label for="firstName">First Name</label>
                        <input type="text" name="cust_first_name" id="firstName" required>
                    </div>

                    <div class="field-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" name="cust_last_name" id="lastName" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>

    <script>
        const showBtn = document.getElementById('show-register');
        const regForm = document.getElementById('register-form');

        showBtn.addEventListener('click', () => {
            const isHidden = regForm.style.display === 'none' || regForm.style.display === '';
            regForm.style.display = isHidden ? 'block' : 'none';
            showBtn.textContent = isHidden
                ? "Hide registration form"
                : "Create a new account";
        });
    </script>
</body>
</html>
